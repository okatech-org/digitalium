{
  "name": "digitalium-functions",
  "version": "1.0.0",
  "description": "DIGITALIUM Cloud Functions backend",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
